{# DRYer code for project page template #}

{# images #}
{% if item|contains('src') and item|contains('img')%} {{ item|striptags('<img>') }}
{# iframe #}
{% elseif item|contains('src') and item|contains('iframe')%}{{ item }}
{# captions marked in italics #}
{% elseif item|contains('<em>') %} {{ item|replace({'<em>' : '<p>'}) }}
{% else %} {{ item }}
{% endif %}
